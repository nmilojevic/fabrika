
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">Contact
                    <strong>fabrika</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-8">
                <!-- Embedded Google Map using an iframe - to select your location find it on Google maps and paste the link as the iframe src. If you want to use the Google Maps API instead then have at it! -->

                 <%= raw @page.content_for(:map) %>
            </div>
            <div class="col-md-4">

                 <%= raw @page.content_for(:contact_info) %>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="row">
        <div class="box">
            <div class="col-lg-12">

                 <%= raw @page.content_for(:contact_form) %>

                 <%= simple_form_for @contact, :url=> main_app.contacts_path(@contact) do |f| %>
                   <div class="row">
                        <div class="form-group col-lg-4">
                          <label><%=t("contact.name")%></label>
                          <%= f.input_field :name, label: false, :required => true,  class: 'form-control'   %>
                        </div>
                        <div class="form-group col-lg-4">
                          <label><%=t("contact.email")%></label>
                            <%= f.input_field :email, label: false, :required => true  ,class: 'form-control'    %>
                        </div>
                         <div class="form-group col-lg-4">
                          <label><%=t("contact.phone")%></label>
                          <%= f.input_field :phone, label: false, :required => true, class: 'form-control'    %>
                        </div>
                         <div class="clearfix"></div>
                        <div class="form-group col-lg-12">
                            <label><%=t("contact.message")%></label>
                            <%= f.input_field :message, label: false, :as => :text, :required => true, class: 'form-control'     %>
                        </div>
                        <div class= "hidden">
                          <%= f.input_field :nickname, :hint => t("contact.hint") %>
                        </div>
                         <div class="form-group col-lg-12">
                          <%= f.button :submit, t("contact.submit"), :class=> "btn btn-primary" %>
                          </div>
                    </div>
                  <% end %>
            </div>
        </div>
    </div>

</div>
<!-- /.container -->
