<div class="container">

       <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center"><%=@page.title%>
                </h2>
                <hr>
            </div>
            <section id='gallery'>
              <% @page.images.each do |image| %>
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <%= link_to image_tag(image.thumbnail(geometry: "400x300#c").url, class: "img-responsive"),
                              image.thumbnail(geometry: "900x600").url ,
                    class: 'thumbnail fancybox',
                    rel: 'gallery'  %>
              
            </div>
            <% end %>
            </section>
             <%= will_paginate @page.images.paginate :page => params[:page], :per_page => 25 %>
          </div>
</div>

 <script type="text/javascript">
  
    $(document).ready(function() {
      $(".fancybox").fancybox({
      helpers : {
        title : {
          type : 'float'
        }
      }
      });
    });
</script>