<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'dhtmlxscheduler', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'dhtmlxmenu', media: 'all', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag 'dhtmlxscheduler_responsive', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'dhtmlxmenu', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'dhtmlxscheduler', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

   <%= javascript_include_tag 'ext/dhtmlxscheduler_recurring', 'data-turbolinks-track' => true %>
     <%= javascript_include_tag 'locale/locale_rs', 'data-turbolinks-track' => true %> 
     <%= javascript_include_tag "locale/locale_#{@locale}", 'data-turbolinks-track' => true %> 
      <%= javascript_include_tag "locale/recurring/locale_recurring_#{@locale}", 'data-turbolinks-track' => true %> 
   <%= javascript_include_tag 'ext/dhtmlxscheduler_quick_info', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'ext/dhtmlxscheduler_readonly', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'ext/dhtmlxscheduler_key_nav', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'ext/dhtmlxscheduler_expand', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'ext/dhtmlxscheduler_tooltip', 'data-turbolinks-track' => true %>
   <%= javascript_include_tag 'dhtmlxscheduler_responsive', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "datatables", 'data-turbolinks-track' => true %>
  
    <!-- Custom Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin-ext,latin" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Sans:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic&subset=latin-ext,latin" rel="stylesheet" type="text/css">
    <meta property="fb:app_id" content="1657229401263456" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta charset="utf-8">
    <%= display_meta_tags %>
   <%= csrf_meta_tags %>  
  </head>
  <body <%= "data-no-turbolinks='true'".html_safe if (controller_name=="pages" || controller_name == "posts") %>>
      <%= render 'layouts/messages' %>
      <%= render 'layouts/header' %>
      <%= yield %>
      <div id="modal-holder"></div>
      <%= render 'layouts/footer' %>
      <%= content_for :extra_js %>
  </body>
</html>
