<div class="container">
  <div class="box">

<div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Users</strong>
                </h2>
                <hr>
            </div>


<%= link_to "All Users", :action => "index" %>
|
<%= link_to "Users awaiting approval", :action => "index", :approved => "false" %>
<br/><br/>
    <div class="col-md-12">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
<script type="text/javascript">
  $('select.checkbox').multiselect({multiple: true, onChange: function(element, checked) {
        var select_val = $(element).closest("td").find('input#user_subscribed_event_types');
        $(select_val).val($(element).parent().val())
      }
    });
    $('select.role').multiselect({onChange: function(element, checked) {
        var select_val = $(element).closest("td").find('input#user_role');
        $(select_val).val($(element).parent().val())
      }
    });

</script>



