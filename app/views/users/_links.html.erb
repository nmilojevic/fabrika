<div class="btn-group">
  <button type="button" class="btn btn-danger" <%= user.admin? ? 'disabled' :''%>>Action</button>
  <button type="button" class="btn btn-danger dropdown-toggle <%= user.admin? ? 'disabled' :''%>" data-toggle="dropdown">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
   <li><%= link_to("Approve user", approve_user_path(user)) if user.pending? %></li>
   <li><%= link_to("Renew membership", renew_membership_path(user)) if user.expired? %></li>
   <li><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete) unless user == current_user %></li>
  </ul>
</div>