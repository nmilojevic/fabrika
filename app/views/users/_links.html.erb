<div class="btn-group">
  <button type="button" class="btn btn-danger" <%= user.admin? ? 'disabled' :''%>><%=t 'users.action'%></button>
  <button type="button" class="btn btn-danger dropdown-toggle <%= user.admin? ? 'disabled' :''%>" data-toggle="dropdown">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
   <li><%= link_to(t('users.approve'), approve_user_path(user)) if user.pending? %></li>
   <li><%= link_to(t('users.renew'), renew_membership_path(user)) if user.expired? %></li>
   <li><%= link_to(t('users.delete'), user_path(user), :data => { :confirm => t('users.confirm_delete') }, :method => :delete) unless user == current_user %></li>
  </ul>
</div>