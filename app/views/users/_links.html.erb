<div class="btn-group">
  <button type="button" class="btn btn-danger" <%= user.admin? ? 'disabled' :''%>><%=t 'users.action'%></button>
  <button type="button" class="btn btn-danger dropdown-toggle <%= user.admin? ? 'disabled' :''%>" data-toggle="dropdown">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
   <li><%= link_to(t('users.approve'), "javascript:;", :data => { user_id: user.id}, class:"approve") if user.pending? %></li>
   <li><%= link_to(t('users.renew'), "javascript:;", :data=>{user_id:user.id}, class:"renew") if user.expired? %></li>
   <li><%= link_to(t('users.delete'), "javascript:;", :data => { :user_id => user.id }, class:"delete") unless user == current_user %></li>
  </ul>
</div>